<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title of Movie"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="10pt"
            android:id="@+id/movieTitle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/dateText"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/movieTitle"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/locationText"
            android:layout_below="@+id/dateText"
            android:layout_alignStart="@+id/movieTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sample description"
            android:id="@+id/descriptionText"
            android:layout_below="@+id/locationText"
            android:layout_alignStart="@+id/movieTitle" />

        <ImageView
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:src="@drawable/skyline_img"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="This is a great opportunity to meet new people and explore engineering!"
            android:id="@+id/textView7"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:text="Remember to empower those around you as well!"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>



</LinearLayout>